
// sort array, and then check if two pointers sum to -v if that is case then can add to other pointer v to get 0
// 



class Solution {
public:
    vector<vector<int>> threeSum(vector<int>& nums) {
        sort(nums.begin() , nums.end());    //Sorted Array
        if(nums.size() < 3){    //Base case 1
            return {};
        }
        if(nums[0] > 0){        //Base case 2
            return {};
        }

        vector<vector<int>> answer;

	//Traversing the array to fix the number.
         for(int i = 0; i < nums.size(); ++i){     
	   //If number fixed is +ve, stop there because we can't make it zero by searching after it.
            if(nums[i] > 0){     
                break;
            }

	    //If number is getting repeated, ignore the lower loop and continue.
            if(i > 0 && nums[i] == nums[i - 1]){    
                continue;
            }

	    //Make two pointers high and low, and initialize sum as 0.
            int low = i + 1 , high = nums.size() - 1;   
            int sum = 0;

	    //Search between two pointers, just similiar to binary search.
            while(low < high){                          
                sum = nums[i] + nums[low] + nums[high];

		//If sum is +ve, means, we need more -ve numbers to make it 0, decreament high (high--).
                if(sum > 0){   
                    high--;
                } else if(sum < 0){ //If sum is -ve, means, we need more +ve numbers to make it 0, increament low (low++).
                    low++;
                } else {
		  //we have found the required triplet, push it in answer vector
                    answer.push_back({nums[i] , nums[low] , nums[high]});  
		    //Now again, to avoid duplicate triplets, we have to navigate to last occurences of num[low] and num[high] respectively
                    int last_low_occurence = nums[low] , last_high_occurence = nums[high];  
		    // Update the low and high with last occurences of low and high.

                    while(low < high && nums[low] == last_low_occurence){   
                        low++;
                    }

                    while(low < high && nums[high] == last_high_occurence){
                        high--;
                    }
                }
            }
        }
        return answer;
    }
};
